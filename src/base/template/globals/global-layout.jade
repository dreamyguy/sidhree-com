include global-mixins.jade

doctype html
html(lang="#{localeSite}")
  block head
    include global-head.jade

body(class=['open-sans-light', 'bg-fav-beige-light', 'fg-fav-occre-light'])

  +bar

  block content
    p If you can read this the page that extends layout doesn't have a block 'content'

  section(class=["copyright"])
    div(class=["content", "align-center"])
      .row
        div(class=["small-12", "columns"])
          p Copyright &copy; #[+year] #{name}.
          p(class=["copyright-mit", "fg-gray"]) #[a(href="#{repo}") Source] free to use under the terms of the #[a(href="https://opensource.org/licenses/MIT") MIT License].

  +bar(class="pos-bottom-block")
